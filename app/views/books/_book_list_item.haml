.row-fluid 
  .span12

    .row-fluid
      .span9.title
        %h5= book.full_name
        %p.isbn= "ISBN-13: #{book.isbn13}"
        %p.publiser= "Editorial: <b>My publisher</b> ".html_safe
        %p.publiser= "Fecha publicaci√≥n: <b>#{book.published_at.strftime("%d %B %Y")}</b> ".html_safe
        .authors
          %span Authors
          = ["Jean Pean", "Alberto Olmedo", "Jorge Bucay"].map{ |a| link_to a, "#" }.join(" ").html_safe
        %p.description= book.description
      .span3.image.pagination-centered
        = image_tag "0#{(book.id % 10)}.jpg", width: "200px"

    .row-fluid.book-item-footer
      .span3
        = button_tag "Agregar a carrito", class: "btn btn-primary"
      .span6
      .span3
        .price.alert.alert-info
          %p= "Precio: $ #{rand(123..232)}.#{rand(00..99)}"



